<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the button -->
    <solid android:color="#000000"/> <!-- You can change to your preferred color -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#000000"/> <!-- Slightly darker border -->

    <!-- Optional padding inside button -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
