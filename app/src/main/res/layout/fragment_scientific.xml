<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Expression"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:cursorVisible="false"
        android:gravity="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="28sp"
        android:textColor="#070707"
        android:gravity="end"
        android:padding="2dp" />

    <ToggleButton
        android:id="@+id/btnDegRad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:checked="true"
        android:padding="2dp"
        android:textOff="RAD"
        android:textOn="DEG"
        android:textSize="12sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="5"
        android:rowCount="7"
        android:useDefaultMargins="true">

        <Button android:id="@+id/btnSin" style="@style/CalcButton" android:text="sin" />
        <Button android:id="@+id/btnCos" style="@style/CalcButton" android:text="cos" />
        <Button android:id="@+id/btnTan" style="@style/CalcButton" android:text="tan" />
        <Button android:id="@+id/btnLog" style="@style/CalcButton" android:text="log" />
        <Button android:id="@+id/btnExp" style="@style/CalcButton" android:text="exp" />

        <Button android:id="@+id/btnSqrt" style="@style/CalcButton" android:text="√" />
        <Button android:id="@+id/btnPow" style="@style/CalcButton" android:text="xʸ" />
        <Button android:id="@+id/btnPi" style="@style/CalcButton" android:text="π" />
        <Button android:id="@+id/btnOpen" style="@style/CalcButton" android:text="(" />
        <Button android:id="@+id/btnClose" style="@style/CalcButton" android:text=")" />

        <Button android:id="@+id/btn7" style="@style/CalcButton" android:text="7" />
        <Button android:id="@+id/btn8" style="@style/CalcButton" android:text="8" />
        <Button android:id="@+id/btn9" style="@style/CalcButton" android:text="9" />
        <Button android:id="@+id/btnDiv" style="@style/CalcButton" android:text="÷" />
        <Button android:id="@+id/btnClear" style="@style/CalcButton" android:text="C" />

        <Button android:id="@+id/btn4" style="@style/CalcButton" android:text="4" />
        <Button android:id="@+id/btn5" style="@style/CalcButton" android:text="5" />
        <Button android:id="@+id/btn6" style="@style/CalcButton" android:text="6" />
        <Button android:id="@+id/btnMul" style="@style/CalcButton" android:text="×" />
        <Button android:id="@+id/btnDel" style="@style/CalcButton" android:text="DEL" />

        <Button android:id="@+id/btn1" style="@style/CalcButton" android:text="1" />
        <Button android:id="@+id/btn2" style="@style/CalcButton" android:text="2" />
        <Button android:id="@+id/btn3" style="@style/CalcButton" android:text="3" />
        <Button android:id="@+id/btnSub" style="@style/CalcButton" android:text="-" />
        <Button android:id="@+id/btnAns" style="@style/CalcButton" android:text="ANS" />

        <Button android:id="@+id/btn0" style="@style/CalcButton" android:text="0" />
        <Button android:id="@+id/btnDot" style="@style/CalcButton" android:text="." />
        <Button android:id="@+id/btnAdd" style="@style/CalcButton" android:text="+" />
        <Button
            android:id="@+id/btnEqual"
            style="@style/CalcButton"
            android:layout_columnSpan="2"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="="
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </GridLayout>
</LinearLayout>
